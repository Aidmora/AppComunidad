<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil_javer2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardCornerRadius="48dp"
            android:clickable="false"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/foto_javer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Imagen"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombre_javer"
                    android:layout_marginTop="10dp"
                    android:text="NOMBRE"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/vinoClaro"
                    android:fontFamily="@font/inter_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/apellido_javer"
                    android:layout_marginTop="10dp"
                    android:text="APELLIDO"
                    android:textColor="@color/vinoClaro"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />
                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="100dp"
                    android:clickable="false"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_gravity="center">


                    <ImageButton
                        android:id="@+id/foto_siguiente"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:srcCompat="@drawable/ic_icon_siguiente"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@null"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/scrollHorizontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/celular_Info"
                                android:text="Celular"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/vino"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:id="@+id/linea"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/secundario" />

                            <TextView
                                android:id="@+id/celular_javer"
                                android:text="Celular"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/correo_Info"
                                android:text="Correo Electrónico"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/vino"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="wrap_content"
                                android:maxLines="1"
                                android:layout_height="wrap_content" />
                            <View
                                android:id="@+id/linea2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/secundario" />

                            <TextView
                                android:id="@+id/correo_javer"
                                android:text="Correo"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="wrap_content"
                                android:maxLines="2"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>
            <HorizontalScrollView
                android:id="@+id/scrollHorizontal3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/cedula_Info"
                                android:text="Cédula"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/vino"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:layout_height="wrap_content" />
                            <View
                                android:id="@+id/linea3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/secundario" />

                            <TextView
                                android:id="@+id/cedula_javer"
                                android:text="Cedula"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/estado_civil_Info"
                                android:text="Estado Civil"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/vino"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:layout_height="wrap_content" />
                            <View
                                android:id="@+id/linea4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/secundario" />

                            <TextView
                                android:id="@+id/estadoC_javer"
                                android:text="Estado Civil"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
