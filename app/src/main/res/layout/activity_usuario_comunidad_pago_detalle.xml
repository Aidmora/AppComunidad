<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInterface.Activity.usuarioComunidadPagoDetalle">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/encabezado"
            style="@style/fondo_encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="48dp"
                android:clickable="false"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/foto_javerInfo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Imagen"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="false"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/nombre_javerInfo"
                    android:layout_marginTop="10dp"
                    android:text="NOMBRE"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/vinoClaro"
                    android:fontFamily="@font/inter_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/apellido_javerInfo"
                    android:layout_marginTop="10dp"
                    android:text="APELLIDO"
                    android:textColor="@color/vinoClaro"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    tools:ignore="HardcodedText" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/botonIngresosUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/icon_ingresos_usuario" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/beige"
                android:clickable="false"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                app:cardUseCompatPadding="true">
                <TextView
                    android:id="@+id/ingresoDatos"
                    android:layout_marginTop="20dp"
                    android:text="Registro de Información"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/white"
                    android:clickable="false"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/añoRegistro"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Año del Registro"
                            android:textColor="@color/secundario"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:fontFamily="@font/inter_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minLines="2"
                            tools:ignore="HardcodedText" />

                        <NumberPicker
                            android:id="@+id/listaAnnos"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:solidColor="@color/beige"
                            android:layout_marginTop="10dp"
                            android:layout_height="60dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/white"
                    android:clickable="false"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/fechaRegistro"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Día del Registro"
                            android:textColor="@color/secundario"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:fontFamily="@font/inter_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/ingresarFechaRegistro"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa la fecha"
                            android:inputType="text" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:clickable="false"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mesRegistro"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Mes del Registro"
                        android:textColor="@color/secundario"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:fontFamily="@font/inter_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        tools:ignore="HardcodedText" />

                    <NumberPicker
                        android:id="@+id/listaMesesActivityPago"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:solidColor="@color/beige"
                        android:layout_marginTop="10dp"
                        android:layout_height="70dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:clickable="false"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="20dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/layoutCartasVentanaPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/layoutCartasVentanaPrincipal2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/vinoClaro"
                                android:clickable="false"
                                app:cardCornerRadius="40dp"

                                app:cardUseCompatPadding="true">
                                <TextView
                                    android:id="@+id/ingresoBienes"

                                    android:text="Registro de Ingresos del Usuario"
                                    android:textSize="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/inter_bold"
                                    android:layout_width="match_parent"
                                    android:minLines="2"
                                    android:layout_height="wrap_content" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutCartasVentanaPrincipal3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/instrucciones"
                            style="@style/texto_general"
                            android:layout_marginLeft="120dp"
                            android:layout_marginBottom="20dp"
                            android:text="INSTRUCCIONES" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/vinoClaro"
                            android:clickable="false"
                            app:cardCornerRadius="40dp"

                            app:cardUseCompatPadding="true">
                            <ImageButton
                                android:id="@+id/importanteInstrucciones"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_icon_info"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:background="@null"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                        <TextView
                            android:id="@+id/textoMasserBaitHaM"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Masser Bait HaM" />

                        <EditText
                            android:id="@+id/ingresarMasserBaitHaM"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoRoshJodesh"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Rosh Jodesh" />

                        <EditText
                            android:id="@+id/ingresarRoshJodesh"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoTerumahYeladim"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Terumáh Yeladim" />

                        <EditText
                            android:id="@+id/ingresarTerumahYeladim"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoTerreno"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Terreno" />

                        <EditText
                            android:id="@+id/ingresarTerreno"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoShuljan"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Shuljan" />

                        <EditText
                            android:id="@+id/ingresarShuljan"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoTzedaqah"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Tzedaqáh" />

                        <EditText
                            android:id="@+id/ingresarTzedaqah"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoKaparah"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Kaparáh" />

                        <EditText
                            android:id="@+id/ingresarKaparah"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                        <TextView
                            android:id="@+id/textoArriendo"
                            style="@style/texto_general"
                            android:textColor="@color/vino"
                            android:text="Arriendo" />

                        <EditText
                            android:id="@+id/ingresarArriendo"
                            style="@style/ingreso_inicio_registro"
                            android:ems="10"
                            android:hint="Ingresa el valor"
                            android:inputType="text" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/guardarRegistros"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Guardar Información"
                android:backgroundTint="@color/vino"
                android:layout_height="match_parent"></Button>
        </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>