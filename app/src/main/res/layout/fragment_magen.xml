<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userInterface.Fragments.MagenFragment">
    <LinearLayout
        android:id="@+id/encabezado2"
        style="@style/fondo_encabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/googleMaps_FButtonVentanaPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/icon_google_maps"
            tools:layout_editor_absoluteX="189dp"
            tools:layout_editor_absoluteY="659dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/magen_FButtonVentanPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_icon_magen" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutVentanaMagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@id/scrollVentanaPrincipal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textSize="20dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/vino"
            android:text="ברוך הבא"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_bold"
            android:gravity="left"
            android:text="MAKJANÉH HASHEKJEN YAH"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_marginTop="200dp"
        android:id="@+id/scrollVentanaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutVentanaMagen"
        android:fillViewport="true"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/vino"
            android:clickable="false"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:id="@+id/layoutCartasVentanaPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layoutHVentanaPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="left"
                        android:text="CLASES"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/beige"
                        android:textSize="12dp" />
                    <Space
                        android:layout_width="160dp"
                        android:layout_height="match_parent" />
                        <LinearLayout
                            android:id="@+id/layoutCartasVentanaPrincipal3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="right"
                                android:textColor="@color/white"
                                android:text="Presenciales y "
                                android:layout_marginEnd="10dp"
                                android:textSize="20dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="right"
                                android:textColor="@color/white"
                                android:text="Virtuales "
                                android:layout_marginEnd="10dp"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                <View
                    android:id="@+id/lineaGuia2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/menta" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:textColor="@color/beige"
                    android:text="Horarios "
                    android:layout_marginEnd="10dp"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/horario_Mañana"
                                android:text="Clases Mañana"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/vino"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:id="@+id/linea"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/black" />

                            <TextView
                                android:id="@+id/hora_Mañana"
                                android:text="11:00 am - 2:00 pm"
                                android:gravity="center"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/horario_Tarde"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Clases Tarde"
                                android:textColor="@color/vino" />
                            <View
                                android:id="@+id/linea2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/black" />

                            <TextView
                                android:id="@+id/hora_Tarde"
                                android:text="4:30 pm - 7 pm"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_gravity="left"
                                android:fontFamily="@font/inter_bold"
                                android:layout_width="match_parent"
                                android:maxLines="2"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </HorizontalScrollView>


</FrameLayout>